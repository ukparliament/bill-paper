<%= content_tag( 'p', @publication_type.description.html_safe ) if @publication_type.description %>

<% unless @publication_type.links.empty? %>
	<%= content_tag( 'h2', 'Papers' ) %>
	<%= content_tag( 'p', "#{link_to( 'RSS', publication_type_show_url( :publication_type => @publication_type.bill_system_id, :format => 'rss' ) )} &middot; #{link_to( 'CSV', publication_type_show_url( :publication_type => @publication_type.bill_system_id, :format => 'csv' ) )}".html_safe ) %>
	<ol>
		<%= render :partial => 'link/link', :collection => @publication_type.links %>
	</ol>
<% end -%>